<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_short_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/step_detail_desc_layout_short_description_tv_size"
        tools:text="Starting prep" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/step_detail_desc_layout_description_tv_size"
        tools:text="1. Preheat the oven to 350Â°F. Butter a 9 inch deep dish pie pan." />

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/content_desc_step_thumbnail"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tools:src="@drawable/recipe_image_placeholder"
        tools:visibility="visible" />

</LinearLayout>